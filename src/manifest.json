{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "Web KIOSK",
  "description": "Web KIOSK",
  "author": "Jerry Lin",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' 'unsafe-inline' data:",
  "background": {
    "page": "index.html?page=background",
    "persistent": false
  },
  "options_ui": {
    "page": "index.html?page=options",
    "chrome_style": true,
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": {
      "19": "favicon.ico",
      "38": "favicon.ico"
    },
    "default_title": "browser action title",
    "default_popup": "index.html?page=popup"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}
